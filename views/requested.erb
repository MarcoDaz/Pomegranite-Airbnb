<html>
  <head></head>
  <header>
  <a href="/spaces">All Spaces</a>
  <a href="/requests">All Requests</a>

  <% if @is_signed_in == nil %>
      <a href="/sign_in">Login</a>
    <% else %>
      <a href="/sign_out">Sign Out</a>
    <% end %>
  </header>
  <body>
    <h1> Requests For Your Space: <%= @space.name %> </h1> 
    <p> <b> Date Requested: </b> <%= @request_obj.date %> </p>

    <% if @request_obj.confirmed == false %>
      <p> <b> Not confirmed </b> </p>

      <form action="<%= '/requested/' + @request_obj.id.to_s%>" method="POST">

        <button name="confirmation" type="submit"
          value=true>Confirm Booking</button> <br> <br>

        <button name="confirmation" type="submit"
          value=false>Deny Booking</button> <br> <br>
       
      </form>

    <% else %>
      <p> Booking confirmed </p>
    <% end %>


  </body>
</html>