  <body>
    <h1>List a Space</h1>

    <form action="/create_space" method="POST">
      <label for="name">Name</label><br>
      <input type="text" name="name" id="name" required><br><br>

      <label for="description">Description</label><br>
      <input type="text" description="description" id="description" required><br><br>

      <label for="price">Price per Night (Â£)</label><br>
      <input type="number" price="price" id="price" required><br><br>

      <label for="available_from">Available from (DD/MM/YY)</label><br>
      <input type="date" available_from="available_from" id="available_from" required><br><br>

      <label for="available_to">Available to (DD/MM/YY)</label><br>
      <input type="date" available_to="available_to" id="available_to" required><br><br>

      <input type="submit" value="List Space">
    </form>
  </body>
