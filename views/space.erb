<html>
<head>
  <title><%= @space.name %></title>
</head>
<header>
  <a href="/spaces">All Spaces</a>
  <a href="/requests">Requests</a>

  <% if @is_signed_in == nil %>
    <a href="/sign_in">Login</a>
  <% else %>
    <a href="/sign_out">Sign Out</a>
  <% end %>
</header>
<body>
  <h1><%= @space.name %></h1>
  
  <h2><%= @space.description %></h2>

  <form action="<%= '/spaces/' + @space.id.to_s %>" method="POST">
    <p>Pick a night</p>
    <input type="date"
           name="date"
           min=<%= @space.available_from %>
           max=<%= @space.available_to %>
    >
    <input type="submit" value="Request to book">
  </form>

</body>
</html>